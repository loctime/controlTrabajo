rules_version = '2';

// Reglas de seguridad para Firebase Storage
// Aplicar en Firebase Console -> Storage -> Rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Regla general: solo usuarios autenticados
    match /{allPaths=**} {
      allow read: if request.auth != null;
      // Limitar tamaño de archivos a 10MB
      allow write: if request.auth != null 
                   && request.resource.size < 10 * 1024 * 1024;
    }
    
    // Regla específica para carpeta de CV
    match /cv/{userId}/{fileName} {
      // Lectura: cualquier usuario autenticado
      allow read: if request.auth != null;
      // Escritura: solo el dueño del archivo
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024;
      // Eliminación: solo el dueño o admin
      allow delete: if request.auth != null 
                    && request.auth.uid == userId;
    }
    
    // Regla específica para carpeta de fotos
    match /fotos/{userId}/{fileName} {
      // Lectura: cualquier usuario autenticado
      allow read: if request.auth != null;
      // Escritura: solo el dueño del archivo
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024; // 5MB para fotos
      // Eliminación: solo el dueño o admin
      allow delete: if request.auth != null 
                    && request.auth.uid == userId;
    }
  }
}

